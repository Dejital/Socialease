@model IEnumerable<Socialease.Models.Person>
@{
    ViewBag.Title = "People";
}
@section Scripts {
    <script type="text/javascript" src="~/lib/angular/angular.min.js"></script>
    <script type="text/javascript" src="~/lib/angular-route/angular-route.min.js"></script>
    <script type="text/javascript" src="~/js/app.js"></script>
    <script type="text/javascript" src="~/js/peopleController.js"></script>
    <script type="text/javascript" src="~/js/basicControls.js"></script>
}
<div class="row" ng-app="app">
    <h1>People</h1>

    <div ng-controller="peopleController as vm">
        <div ng-show="vm.errorMessage" class="text-danger">{{ vm.errorMessage }}</div>
        <spinner display="vm.isBusy"></spinner>
        <table class="table table-responsive table-striped">
            <tr ng-repeat="person in vm.people">
                <td>{{ person.name }}</td>
                <td>{{ person.lastPing | date }}</td>
                <td>
                    <a href="#" class="btn btn-sm btn-primary">Manage</a>
                </td>
            </tr>
        </table>

        <form novalidate name="newPersonForm" ng-submit="vm.addPerson()">
            <h2>Add Person</h2>
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control"
                       type="text"
                       id="name"
                       name="name"
                       ng-model="vm.newPerson.name"
                       required 
                       ng-minlength="1" />
                <span ng-show="newPersonForm.name.$error.required" 
                      class="text-warning">Name is required.</span>
            </div>
            <div class="form-group">
                <input type="submit"
                       value="Add"
                       class="btn btn-primary" 
                       ng-disabled="newPersonForm.$invalid" />
            </div>
        </form>
    </div>
</div>
